                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding Image}" Grid.Row="0" WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Start" />
                                                <Label Text="{Binding StatusItemDevolucao}" Grid.Row="1"  FontSize="Micro" HorizontalOptions="Center" VerticalOptions="Start" /> 
                                            </Grid> 
                                            <StackLayout Spacing="1" Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0">
                                                <Grid HorizontalOptions="FillAndExpand">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Row="0" Grid.Column="0" Text="Item" FontAttributes="Bold" FontSize="Micro" />
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding ItCodigo}" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" FontSize="Micro" />
                                                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding __item__.DescItem}" LineBreakMode="TailTruncation" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" FontSize="Micro" />
                                                </Grid>
                                                <Grid HorizontalOptions="FillAndExpand">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Row="0" Grid.Column="0" Text="Qt Requisitada" FontAttributes="Bold" FontSize="Micro" />
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding QtRequisitada, Converter={StaticResource ConvertDecimal}}" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" FontSize="Micro" />
                                                </Grid>
                                                <Grid HorizontalOptions="FillAndExpand">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Row="0" Grid.Column="0" Text="Qt a Devolver" FontAttributes="Bold" FontSize="Micro" />
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding QtaDevolver, Converter={StaticResource ConvertDecimal}}" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" FontSize="Micro" />
                                                </Grid>
                                                
                                                <Grid HorizontalOptions="FillAndExpand">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="80" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Row="0" Grid.Column="0" Text="Qt Devolvida" FontAttributes="Bold" FontSize="Micro" />
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding QtDevolvida, Converter={StaticResource ConvertDecimal}}" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" FontSize="Micro" />
                                                </Grid>
