                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Label Grid.Row="0" Grid.Column="0" Text="Qt Digitada (Mobile): " FontAttributes="Bold" FontSize="Micro" VerticalOptions="Center" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding QtAtendidaMobile}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" FontSize="Micro" />
                                                  
                                                        
                                                        <Frame HasShadow="true" Grid.Column="2" Grid.Row="0" Margin="0,0,0,0" BackgroundColor="Transparent" Padding="0" x:Name="frameHelp" HeightRequest="30" WidthRequest="30" VerticalOptions="Start"
                                                            HorizontalOptions="End">
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="OnTapped_FrameEstab" NumberOfTapsRequired="1" />
                                                            </Frame.GestureRecognizers>
                                                            <Image Source="icon_help.png" />
                                                        </Frame>
                                                    </Grid>
                                                </Frame> -->
                                            </StackLayout>
                                        </Grid>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Grid Grid.Row="1" Margin="0,0,0,0" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                          <Button x:Name="BtnDevolverRequisicao" android:Button.UseDefaultShadow="true" FontSize="Small" MinimumHeightRequest="50" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Image="efetivarMini.png" BackgroundColor="{StaticResource NavigationPrimary}" BorderRadius="16" Clicked="OnClick_DevolveRequisicao"
                            Grid.Row="0" Grid.Column="0" Text="Devolver Requisição" TextColor="White" />
                    </Grid> 
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
